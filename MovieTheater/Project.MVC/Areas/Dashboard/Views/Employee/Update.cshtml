@model Project.Entity.Entity.Employee
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="card mb-4 mt-4">
    <div class="card-header">
        <h3>New Employee</h3>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="Employee" method="post">
            <div class="mb-2">
                <label>Employee Name</label>
                <input type="text" class="form-control" asp-for="Name" />
            </div>

            <div class="mb-2">
                <label>Employee Surname</label>
                <input type="text" class="form-control" asp-for="Surname" />
            </div>

            <div class="mb-2">
                <label>Title</label>
            </div>

            <div class="form-check form-check-inline mb-4">
                <input class="form-check-input" type="radio" asp-for="Title" value="1">
                <label class="form-check-label">BoxOfficeClerk</label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Title" value="2">
                <label class="form-check-label">CinemaDepartment</label>
            </div>

            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" asp-for="Title" value="3">
                <label class="form-check-label">Manager</label>
            </div>

            <div class="mb-2">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>



        </form>
    </div>
</div>


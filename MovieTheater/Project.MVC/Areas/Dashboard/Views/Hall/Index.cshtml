@model List<Project.Entity.Entity.Hall>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@if (TempData["result"] != null)
{
    <div class="alert alert-info alert-dismissible mt-2">
        <span>@TempData["result"]</span>
    </div>
}
<div class="card mb-4 mt-4">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <h3>@ViewData["Title"]</h3>
            <a class="btn btn-success" asp-action="Create" asp-controller="Hall">New Hall</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Hall Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="3">
                                <span>Herhangi bir salon eklenmemis</span>
                            </td>
                        </tr>
                    }

                    {
                        @foreach (var hall in Model)
                        {
                            <tr>
                                <td>@hall.Id</td>
                                <td>@hall.No</td>
                                <td>
                                    <a class="btn btn-sm btn-warning" asp-action="Update" asp-controller="Hall" asp-route-id="@hall.Id">Update</a>
                                    |
                                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Hall" asp-route-id="@hall.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>

